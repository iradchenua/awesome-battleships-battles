{% extends 'base.html.twig' %}
{% block title %}game{% endblock %}
{% block stylesheets %}
    {{ parent() }}
    <link href=" {{ asset('css/game.css') }} " rel="stylesheet" />
{% endblock %}
{%  block body %}
    {{ parent() }}
    <p>user_id1: {{ userId1 }}</p>
    <p>user_id2: {{ userId2 ? userId2 : 'waiting' }}</p>
    {{ form(form) }}
    <canvas id="cnv" width="{{ width }}" height="{{ height }}"></canvas>
    <div id="jsInfo" data-game-field-width="{{ gameFieldWidth }}" data-game-field-height="{{ gameFieldHeight }}"></div>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script src="js/canvasBasic.js"></script>
{% endblock %}